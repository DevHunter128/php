{
  "version": 2,
  "name": "now-php-slim",
  "scope": "juicyfx",
  "regions": ["all"],
  "public": true,
  "builds": [
    {
      "src": "*.php",
      "use": "now-php@canary",
      "config": {
        "composer": true
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.php"
    }
  ]
}
