{
  "version": 2,
  "builds": [
    { "src": "*.php", "use": "now-php" },
    { "src": "api/*.php", "use": "now-php" },
    { "src": "ext/*.php", "use": "now-php" },
    {
      "src": "ini/*.php",
      "use": "now-php",
      "config": {
          "php.ini": {
              "memory_limit": "128M",
              "post_max_size": "32M"
          }
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/ini/(.*)", "dest": "/ini/$1" },
    { "src": "/ext/(.*)", "dest": "/ext/$1" }
  ],
  "env": {
    "NOW_PHP_FOO": "bar3"
  },
  "build": {
    "env": {
      "NOW_PHP_DEBUG": "1"
    }
  }
}
