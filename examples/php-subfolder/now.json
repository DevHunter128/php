{
  "version": 2,
  "name": "now-php-subfolder",
  "scope": "juicyfx",
  "regions": ["all"],
  "public": true,
  "builds": [
    { "src": "public/*.php", "use": "now-php@experimental" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/public/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
